co: pr checkout
notify: '!gh pr checks $1 --fail-fast --watch && ~/.bin/pr-notify good $1 || ~/.bin/pr-notify bad $1'
pr edit-body: '!gh pr view --json body -q .body > temp_body.md; vim temp_body.md; gh pr edit --body-file temp_body.md; rm temp_body.md;'
watch: '!gh pr checks $1 --required --fail-fast --watch && ~/.bin/pr-notify good $1 || ~/.bin/pr-notify bad $1'
yolo: '!gh copilot -p "$*" --allow-all-tools'
